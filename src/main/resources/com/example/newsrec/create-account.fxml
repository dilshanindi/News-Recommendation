<VBox alignment="CENTER" prefHeight="742.0" prefWidth="1048.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateAccountControl">
    <Label fx:id="welcomeText">
        <graphic>
            <AnchorPane styleClass="anchor-pane">
                <children>
                    <ImageView fitHeight="716.0" fitWidth="1048.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                        <image>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="495.0" fitWidth="743.0" layoutX="50.0" layoutY="150.0" opacity="0.3" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                        <image>
                        </image>
                    </ImageView>
                    <Text layoutX="269.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-text" text="News Recommendation System">
                        <font>
                            <Font name="Gabriola" size="40.0" />
                        </font>
                    </Text>
                    <Text layoutX="344.0" layoutY="191.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Create an Account">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Text>
                    <Text layoutX="75.0" layoutY="297.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="NIC :">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <TextField fx:id="nicField" layoutX="174.0" layoutY="277.0" promptText="NIC" styleClass="text-field" />

                    <Text layoutX="75.0" layoutY="369.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Name : ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <TextField fx:id="nameField" layoutX="175.0" layoutY="349.0" promptText="Full Name" styleClass="text-field" />

                    <Text layoutX="75.0" layoutY="445.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Age : ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <TextField fx:id="ageField" layoutX="175.0" layoutY="425.0" promptText="Age" styleClass="text-field" />

                    <Text layoutX="76.0" layoutY="520.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Email : ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <TextField fx:id="emailField" layoutX="176.0" layoutY="500.0" promptText="Email" styleClass="text-field" />

                    <Text layoutX="76.0" layoutY="593.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Password : ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                    <PasswordField fx:id="passwordField" layoutX="175.0" layoutY="573.0" promptText="Password" styleClass="text-field" />

                    <!-- Buttons with onAction -->
                    <Button fx:id="createAccountButton" layoutX="603.0" layoutY="573.0" mnemonicParsing="false" onAction="#handleCreateAccount" prefHeight="18.0" prefWidth="164.0" text="Create Account" />
                    <Button fx:id="clearButton" layoutX="503.0" layoutY="573.0" mnemonicParsing="false" onAction="#handleClear" text="Clear" />
                    <Button fx:id="loginButton" layoutX="650.0" layoutY="165.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="33.0" prefWidth="126.0" text="Login here">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                </children>
            </AnchorPane>
        </graphic>
    </Label>
    <padding>
        <Insets top="20.0" />
    </padding>
</VBox>
